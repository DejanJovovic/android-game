<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Spojnice">


    <Button
        android:id="@+id/desno0"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/desno1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tema" />

    <Button
        android:id="@+id/desno4"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="76dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desno3" />

    <Button
        android:id="@+id/desno2"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/desno3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desno1" />

    <Button
        android:id="@+id/desno1"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/desno2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desno0" />

    <Button
        android:id="@+id/desno3"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="36dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/desno4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desno2" />

    <Button
        android:id="@+id/levo4"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="76dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levo3" />

    <Button
        android:id="@+id/levo2"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/levo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levo1" />

    <Button
        android:id="@+id/levo3"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/levo4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levo2" />

    <Button
        android:id="@+id/levo1"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/levo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/levo0" />

    <TextView
        android:id="@+id/titleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spojnice"
        android:textColor="#F8F5F5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonPoeni1"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="100dp"
        android:text="30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPoeni2"
        android:layout_width="58dp"
        android:layout_height="35dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="112dp"
        android:backgroundTint="@color/red"
        android:text="90"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/levo0"
        android:layout_width="138dp"
        android:layout_height="55dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="32dp"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/levo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tema" />

    <Button
        android:id="@+id/nextGame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="50dp"
        android:text="Sledeca igra"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/timer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="181dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleId" />

    <Button
        android:id="@+id/tema"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="10dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>