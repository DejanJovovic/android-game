<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsosijacijeActivity"
    android:orientation="vertical"
    android:background="#0D1F6888">


    <RelativeLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1F6888">

        <ImageView
            android:id="@+id/backBtnAsosijacije"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:src="@drawable/left"
            android:background="@color/white">

        </ImageView>

        <TextView
            android:id="@+id/gameNameAsosijacije"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Selected Game Name"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/timer">

            </ImageView>

            <TextView
                android:id="@+id/timerAsosijacije"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="00:59"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layoutAB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layoutTitle"
        android:weightSum="2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:id="@+id/layoutA"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnA1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="A1"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnA2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="A2"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnA3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="A3"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">


            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnA4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="A4"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">

            </androidx.appcompat.widget.AppCompatButton>

            <EditText
                android:id="@+id/konacnoA"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="A"
                android:background="#1F6888"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp">

            </EditText>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutB"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnB1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="B1"
                android:textAllCaps="false"
                android:textColor="@color/blue">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnB2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="B2"
                android:textAllCaps="false"
                android:textColor="@color/blue">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnB3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="B3"
                android:textAllCaps="false"
                android:textColor="@color/blue">


            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnB4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="B4"
                android:textAllCaps="false"
                android:textColor="@color/blue">

            </androidx.appcompat.widget.AppCompatButton>

            <EditText
                android:id="@+id/konacnoB"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="#1F6888"
                android:text="B"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white">

            </EditText>

        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/konacno"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:background="#1F6888"
        android:text="KONACNO"
        android:textAlignment="center"
        android:textColor="@color/white">

    </EditText>

    <LinearLayout
        android:id="@+id/layoutCD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp">


        <LinearLayout
            android:id="@+id/layoutC"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/konacnoC"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:text="C"
                android:background="#1F6888"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:layout_marginEnd="20dp">

            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnC1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="C1"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnC2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="C2"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnC3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="C3"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">


            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnC4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:text="C4"
                android:background="@drawable/round_white"
                android:textAllCaps="false"
                android:textColor="@color/blue"
                android:layout_marginEnd="20dp">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutD"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/konacnoD"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="#1F6888"
                android:text="D"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/white">

            </EditText>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnD1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="D1"
                android:textAllCaps="false"
                android:textColor="@color/blue">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnD2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="D2"
                android:textAllCaps="false"
                android:textColor="@color/blue">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnD3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="D3"
                android:textAllCaps="false"
                android:textColor="@color/blue">


            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnD4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/round_white"
                android:text="D4"
                android:textAllCaps="false"
                android:textColor="@color/blue">

            </androidx.appcompat.widget.AppCompatButton>


        </LinearLayout>
    </LinearLayout>



</LinearLayout>